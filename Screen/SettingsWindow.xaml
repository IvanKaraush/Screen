<Window x:Class="Screen.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:resources="clr-namespace:Screen.Resources"
        Title="{x:Static resources:AppResources.Settings_RunOnStartupMessage}" Height="200" Width="300">
    <Grid>
        <CheckBox x:Name="StartupCheckBox"
                  Content="{x:Static resources:AppResources.Settings_RunOnStartupMessage}" 
                  VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Выберите язык:" Margin="0,0,0,5" HorizontalAlignment="Center"/>
            <ComboBox x:Name="LanguageComboBox" Width="150">
                <ComboBoxItem Content="Русский" Tag="ru" IsSelected="True"/>
                <ComboBoxItem Content="English" Tag="en"/>
            </ComboBox>
        </StackPanel>
        
        <Button Click="SaveSettingsChanges" Height="30" Width="200" Margin="0,120,0,0" Content="{x:Static resources:AppResources.Settings_SaveChangesMessage}"></Button>
    </Grid>
</Window>